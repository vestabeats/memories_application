{
    "version": 2,
    "builds": [
      { "src": "./client/package.json", "use": "@vercel/static-build" },
      { "src": "./server/index.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "http://localhost:5000/$1" },
      { "src": "/(.*)", "dest": "./client/$1" }
    ],
    "builds": [
      {
        "src": "client/**/*",
        "use": "@vercel/static-build",
        "config": { "distDir": "client/dist" }
      },
      {
        "src": "server/**/*",
        "use": "@vercel/node"
      }
    ]
  }
  